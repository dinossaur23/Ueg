<%= form_with(model: candidate, local: true) do |form| %>
  <% if candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

      <ul>
      <% candidate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :uev %>
    <%= collection_select(:candidate, :uev_id, Uev.all, :id, :token) %>
  </div>

  <div class="field">
    <%= form.label :position %>
    <%= collection_select(:candidate, :position_id, Position.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :candidate_name %>
  </div>

  <div class="field">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, id: :candidate_nickname %>
  </div>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, id: :candidate_number %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :candidate_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
