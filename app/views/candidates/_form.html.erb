<%= form_with(model: candidate, local: true) do |form| %>
  <% if candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

      <ul>
      <% candidate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col s12 m8 l6">
      <div class="field">
          <%= form.label :uev %>
          <%= collection_select(:candidate, :uev_id, Uev.all, :id, :token, { prompt: false }, { class: 'browser-default' }) %>
      </div>

      <div class="field">
        <%= form.label :position %>
        <%= collection_select(:candidate, :position_id, Position.all, :id, :name, { prompt: false }, { class: 'browser-default' }) %>
      </div>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :candidate_name %>
      </div>

      <div class="field">
        <%= form.label :nickname %>
        <%= form.text_field :nickname, id: :candidate_nickname %>
      </div>

      <div class="field">
        <%= form.label :number %>
        <%= form.number_field :number, id: :candidate_number %>
      </div>

      <div class="form-group">
        <label for="exampleInputFile">Image</label>
         <%= form.file_field :image %>
      </div>

      <br><div class="actions waves-effect waves-light btn-large">
        <%= form.submit %>
      </div>
    </div>
  </div>

<% end %>
